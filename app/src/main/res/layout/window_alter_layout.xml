<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hook"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="#4D000000"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/v_move"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#4DAEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_hook"
        app:layout_constraintEnd_toEndOf="@id/rv_hook"
        app:layout_constraintStart_toStartOf="@id/rv_hook" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_window_close"
        app:layout_constraintBottom_toBottomOf="@id/v_move"
        app:layout_constraintStart_toStartOf="@id/v_move"
        app:layout_constraintTop_toTopOf="@id/v_move" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_clean"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_clean"
        app:layout_constraintBottom_toBottomOf="@id/v_move"
        app:layout_constraintEnd_toEndOf="@id/v_move"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="@id/v_move"
        app:layout_constraintTop_toTopOf="@id/v_move" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/v_move"
        app:layout_constraintEnd_toEndOf="@id/v_move"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@id/v_move"
        app:layout_constraintTop_toTopOf="@id/v_move" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ic_move"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_move"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/v_move"
        app:layout_constraintEnd_toEndOf="@id/v_move"
        app:layout_constraintTop_toTopOf="@id/v_move" />

</merge>